---
import { profile } from "../data/cv";

const {
  name,
  location,
  email,
  github,
  linkedin,
  website,
  summary,
  projects,
  skills,
} = profile;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{name} — dev</title>
    <meta name="description" content={`${name} — ${summary}`} />
    <style>
      :root {
        --bg: #ffffff;
        --fg: #111111;
        --muted: #6a6a6a;
        --border: #eaeaea;
        --link: #111111;
        --grid: rgba(0,0,0,0.035);
      }
      @media (prefers-color-scheme: dark) {
        :root {
          --bg: #0b0b0b;
          --fg: #e7e7e7;
          --muted: #a5a5a5;
          --border: #1a1a1a;
          --link: #e7e7e7;
          --grid: rgba(255,255,255,0.06);
        }
      }
      * { box-sizing: border-box; }
      html, body { height: 100%; }
      body {
        margin: 0;
        background: var(--bg);
        color: var(--fg);
        font: 400 15px/1.6 ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Apple Color Emoji", "Segoe UI Emoji", monospace;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }
      body::before {
        content: "";
        position: fixed;
        inset: 0;
        pointer-events: none;
        background-image:
          radial-gradient(600px circle at 0% 0%, rgba(99,102,241,0.12), transparent 60%),
          radial-gradient(800px circle at 100% 0%, rgba(168,85,247,0.10), transparent 60%),
          radial-gradient(600px circle at 50% 100%, rgba(6,182,212,0.10), transparent 60%),
          linear-gradient(to right, var(--grid) 1px, transparent 1px),
          linear-gradient(to bottom, var(--grid) 1px, transparent 1px);
        background-size: auto, auto, auto, 24px 24px, 24px 24px;
        background-position: center;
        opacity: 0.6;
        z-index: 0;
      }
      main { max-width: 760px; margin: 0 auto; padding: 56px 20px; position: relative; z-index: 1; }

      header h1 { margin: 0 0 6px; font-size: 28px; letter-spacing: -0.01em; text-transform: lowercase; background: linear-gradient(90deg, #a855f7, #6366f1, #06b6d4); -webkit-background-clip: text; background-clip: text; color: transparent; }
      header p { margin: 0; color: var(--muted); }
      header p + p { margin-top: 12px; }
      nav.links { margin-top: 14px; display: flex; flex-wrap: wrap; gap: 8px 12px; align-items: center; }
      nav.links a {
        color: var(--link);
        text-decoration: none;
        border-bottom: 1px dotted var(--muted);
        padding-bottom: 2px;
      }
      nav.links a:hover { opacity: 0.8; }
      .dot { color: var(--muted); }

      section { margin-top: 38px; }
      h2 { margin: 0 0 12px; font-size: 13px; text-transform: uppercase; letter-spacing: 0.14em; color: var(--muted); }

      ul.flat { list-style: none; padding: 0; margin: 0; }
      ul.flat li { display: flex; justify-content: space-between; gap: 16px; padding: 12px 0; border-top: 1px solid var(--border); }
      ul.flat li:last-child { border-bottom: 1px solid var(--border); }
      .project a { color: inherit; text-decoration: none; }
      .project a:hover { text-decoration: underline; text-underline-offset: 2px; }
      .project small { display: block; margin-top: 4px; color: var(--muted); }

      .skills .row { display: flex; gap: 12px; align-items: baseline; padding: 10px 0; border-top: 1px solid var(--border); }
      .skills .row:last-child { border-bottom: 1px solid var(--border); }
      .skills .label { width: 120px; color: var(--muted); font-size: 13px; flex-shrink: 0; }
      .skills .items { flex: 1; }

      footer { margin-top: 48px; color: var(--muted); font-size: 13px; }
    </style>
  </head>
  <body>
    <main>
      <header>
        <h1>{name}</h1>
        {location && <p>{location}</p>}
        <p>{summary}</p>
        <nav class="links">
          <a href={`mailto:${email}`}>Email</a>
          <span class="dot">•</span>
          <a href={github} target="_blank" rel="noopener noreferrer">GitHub</a>
          <span class="dot">•</span>
          <a href={linkedin} target="_blank" rel="noopener noreferrer">LinkedIn</a>
          <span class="dot">•</span>
          <a href="/assets/cv.pdf" download="Shahid_Aman.pdf">CV</a>
        </nav>
      </header>

      <section>
        <h2>Stuffs I’ve built</h2>
        <ul class="flat">
          {projects.map((p) => (
            <li class="project">
              <div style="flex:1">
                <a href={p.url} target="_blank" rel="noopener noreferrer">{p.name}</a>
                {p.description && <small>{p.description}</small>}
              </div>
              <div><a href={p.url} target="_blank" aria-label={`Open ${p.name}`}>↗</a></div>
            </li>
          ))}
        </ul>
      </section>

      <section class="skills">
        <h2>Skills</h2>
        <div class="row">
          <div class="label">Languages</div>
          <div class="items">{skills.languages.join(" · ")}</div>
        </div>
        <div class="row">
          <div class="label">Frontend</div>
          <div class="items">{skills.frontend.join(" · ")}</div>
        </div>
        <div class="row">
          <div class="label">Backend</div>
          <div class="items">{skills.backend.join(" · ")}</div>
        </div>
        <div class="row">
          <div class="label">Databases</div>
          <div class="items">{skills.databases.join(" · ")}</div>
        </div>
        <div class="row">
          <div class="label">Tools</div>
          <div class="items">{skills.tools.join(" · ")}</div>
        </div>
        <div class="row">
          <div class="label">Others</div>
          <div class="items">{skills.others.join(" · ")}</div>
        </div>
      </section>

      <footer>
        <span>&copy; {new Date().getFullYear()} {name}</span>
      </footer>
    </main>
  </body>
</html>

